<form action='/edit-animal/{{id}}'>
    <div class='form-group'>
        <label for='zoo' class='cols-sm-2 control-label'>Zoo</label>
        <div class='cols-sm-10'>
            <div class='input-group'>
                <span class='input-group-addon'><i class='fa fa-user fa' aria-hidden='true'></i></span>
                <input type='text' class='form-control' name='zoo' id='zoo'/>
            </div>
        </div>
    </div>
    <div class='form-group'>
        <label for='scientificName' class='cols-sm-2 control-label'>Scientific Name</label>
        <div class='cols-sm-10'>
            <div class='input-group'>
                <span class='input-group-addon'><i class='fa fa-envelope fa' aria-hidden='true'></i></span>
                <input type='text' class='form-control' name='scientificName' id='scientificName'/>
            </div>
        </div>
    </div>
    <div class='form-group'>
        <label for='commonName' class='cols-sm-2 control-label'>Common Name</label>
        <div class='cols-sm-10'>
            <div class='input-group'>
                <span class='input-group-addon'><i class='fa fa-lock fa-lg' aria-hidden='true'></i></span>
                <input type='commonName' class='form-control' name='commonName' id='commonName'
                    placeholder='Enter the Common Name...' />
            </div>
        </div>
    </div>
    <div class='form-group'>
        <label for='givenName' class='cols-sm-2 control-label'>Given Name</label>
        <div class='cols-sm-10'>
            <div class='input-group'>
                <span class='input-group-addon'><i class='fa fa-lock fa-lg' aria-hidden='true'></i></span>
                <input type='givenName' class='form-control' name='givenName' id='givenName'
                    placeholder='Enter the Given Name...' />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="gender" class='cols-sm-2 control-label'>Gender:</label>
        <div class="cols-sm-10">
            <span class='input-group-addon'><i class='fa fa-lock fa-lg' aria-hidden='true'></i></span>
            <input type="radio" name="gender" id="male" value="male">
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-group">
            <span class='input-group-addon'><i class='fa fa-lock fa-lg' aria-hidden='true'></i></span>
            <input type="radio" name="gender" id="female" value="female">
            <label class="form-check-label" for="female">Female</label>
        </div>
    </div>
    <div class="form-group">
        <label for="dob" class='cols-sm-2 control-label'>Date of Birth:</label>
        <input type="date" class="form-control" id="dob" name="dob" placeholder="MM/DD/YYYY">
    </div>
    <div class='form-group'>
        <label for='age' class='cols-sm-2 control-label'>Age</label>
        <div class='cols-sm-10'>
            <div class='input-group'>
                <span class='input-group-addon'><i class='fa fa-lock fa-lg' aria-hidden='true'></i></span>
                <input type='age' class='form-control' name='age' id='age' placeholder='Enter the Age...' />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="gender">Is Transportable</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="isTransportable" id="avaliable" value="avaliable">
            <label class="form-check-label" for="avaliable">Avaliable</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="isTransportable" id="unavaliable" value="unavaliable">
            <label class="form-check-label" for="unavaliable">Unavaliable</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit Animal</button>
</form>
<form action="/delete-animal/{{id}}" method="post">
    <input type="hidden" name="hiddenInput" />
    <button type="submit">Delete</button>
</form>